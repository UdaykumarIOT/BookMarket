@model IEnumerable<BookMarket.Models.Title>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6 text-uppercase">
            <h2>Titles List</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Titles" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create</a>
        </div>
    </div>
    <hr />
    @if (Model.Count() > 0)
    {
        <table id="TitleTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.ImageUrl)
                    </th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="20%" class="text-center">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td width="20%" class="text-center">
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td width="40%" class="text-center">
                            <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="Image" style="width: 170px;" />
                        </td>
                        <td class="d-flex align-items-center justify-content-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.TitleId"
                                   class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.TitleId"
                                   class="btn btn-info" data-toggle="tooltip" data-placement="top" title="Details">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.TitleId"
                                   class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-center text-uppercase text-warning pt-4">No Records to Show</h2>
                </div>
            </div>
        </div>
    }

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#TitleTable').DataTable();
        });
    </script>
}