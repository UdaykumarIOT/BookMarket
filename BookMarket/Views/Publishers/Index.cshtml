@model IEnumerable<BookMarket.Models.Publisher>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
	<div class="row mb-4">
		<div class="col-md-6 text-uppercase">
            <h2>Publishers List</h2>
		</div>
        <div class="col-md-6 text-end">
            <a asp-controller="Publishers" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create</a>
        </div>
	</div>
<hr />

@if (Model.Count() > 0)
{
        <table id="PubTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.PubName)
                </th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="40%" class="text-center">
                        @Html.DisplayFor(modelItem => item.PubName)
                    </td>
                    <td class="d-flex align-items-center justify-content-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.PubId"
                                class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Edit">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                                <a asp-action="Details" asp-route-id="@item.PubId"
                                class="btn btn-info" data-toggle="tooltip" data-placement="top" title="Details">
                                <i class="bi bi-info-circle"></i>
                            </a>
                                <a asp-action="Delete" asp-route-id="@item.PubId"
                                class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Delete">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center text-uppercase text-warning pt-4">No Records to Show</h2>
            </div>
        </div>
    </div>
}
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#PubTable').DataTable();
        });
    </script>
}