@model BookMarket.Models.Sale

@{
    ViewData["Title"] = "Delete Sale";
}

<div>
    <h4>Delete Sale</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title?.Name</dd>

        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Model.User?.UserName</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.SaleDate.ToString("g")</dd>

        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.TotalPrice</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
