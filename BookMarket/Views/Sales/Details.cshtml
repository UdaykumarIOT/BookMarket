@model BookMarket.Models.Sale

@{
    ViewData["Title"] = "Sale Details";
}

<div>
    <h4>Sale Details</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-2">Book Name</dt>
                <dd class="col-sm-10">@Model.Title?.Name</dd>

                <dt class="col-sm-2">User</dt>
                <dd class="col-sm-10">@Model.User?.UserName</dd>

                <dt class="col-sm-2">Phone Number</dt>
                <dd class="col-sm-10">@Model.User?.PhoneNumber</dd>

                <dt class="col-sm-2">User Address</dt>
                <dd class="col-sm-10">@Model.User?.Address</dd>

                <dt class="col-sm-2">Sale Date</dt>
                <dd class="col-sm-10">@Model.SaleDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-2">Quantity</dt>
                <dd class="col-sm-10">@Model.Quantity</dd>

                <dt class="col-sm-2">Total Amount</dt>
                <dd class="col-sm-10">@Model.TotalPrice.ToString("C")</dd>
            </dl>
        </div>
        <div class="col-md-4">
            <img src="@Model.Title?.ImageUrl" alt="@Model.Title?.Name" style="width:150px" />
        </div>
    </div>
</div>
<div>
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>
